generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employees {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  name           String?
  password       String
  responcesCount Int         @default(0)
  country        String
  phone          String
  gender         Gender
  Favorites      Favorites[]
  resume         Resume[]
  Review         Review[]
  responces      Vacation[]  @relation("EmployeesToVacation")
  Notice         Notice[]
  Chat           Chat[]
  Message        Message[]
}

enum Gender {
  Male
  Female
}

model Notice {
  id          Int       @id @default(autoincrement())
  count       Int       @default(0)
  notices     String[]
  owner       Employees @relation(fields: [employeesId], references: [id])
  employeesId Int
}

model Employer {
  id             Int        @id @default(autoincrement())
  name           String?
  email          String     @unique
  password       String
  vacationsCount Int        @default(0)
  vacations      Vacation[]
  Chat           Chat[]
  Message        Message[]
}

model Admin {
  id       Int     @id @default(autoincrement())
  name     String?
  password String
}

model Country {
  id         Int        @id @default(autoincrement())
  name       String
  categories Category[]
}

model Category {
  id         Int         @id @default(autoincrement())
  name       String
  count      Int         @default(0)
  countryId  Int?
  Country    Country?    @relation(fields: [countryId], references: [id])
  directions Direction[]
}

model Direction {
  id            Int        @id @default(autoincrement())
  name          String
  categoryId    Int?
  vacationCount Int        @default(0)
  Category      Category?  @relation(fields: [categoryId], references: [id])
  vacations     Vacation[]
}

model Vacation {
  id             Int         @id @default(autoincrement())
  employerId     Int?
  directionId    Int?
  employeesId    Int?
  favoritesId    Int?
  description    String
  name           String
  proffesion     String
  salary         Int
  responcesCount Int         @default(0)
  createdAt      DateTime    @default(now())
  company        String
  contacts       String[]
  reviewsCount   Int         @default(0)
  reviews        Review[]
  direction      Direction?  @relation(fields: [directionId], references: [id])
  employer       Employer?   @relation(fields: [employerId], references: [id])
  favorites      Favorites?  @relation(fields: [favoritesId], references: [id])
  responces      Employees[] @relation("EmployeesToVacation")
}

model Review {
  id          Int       @id @default(autoincrement())
  text        String
  createdAt   DateTime  @default(now())
  employeesId Int
  vacationId  Int?
  owner       Employees @relation(fields: [employeesId], references: [id])
  Vacation    Vacation? @relation(fields: [vacationId], references: [id])
}

model Resume {
  id          Int       @id @default(autoincrement())
  name        String
  surname     String
  bio         String
  profession  String
  contacts    String
  country     String
  employeesId Int
  createdAt   DateTime  @default(now())
  owner       Employees @relation(fields: [employeesId], references: [id])
}

model Favorites {
  id          Int        @id @default(autoincrement())
  count       Int        @default(0)
  employeesId Int
  owner       Employees  @relation(fields: [employeesId], references: [id])
  vacations   Vacation[]
}

model Chat {
  id          Int       @id @default(autoincrement())
  employer    Employer  @relation(fields: [employerId], references: [id])
  employee    Employees @relation(fields: [employeesId], references: [id])
  messages    Message[]
  employerId  Int
  employeesId Int
}

model Message {
  id          Int       @id @default(autoincrement())
  text        String
  viewed      Boolean   @default(false)
  employer    Employer  @relation(fields: [employerId], references: [id])
  employee    Employees @relation(fields: [employeesId], references: [id])
  createdAt   DateTime  @default(now())
  Chat        Chat?     @relation(fields: [chatId], references: [id])
  chatId      Int?
  employerId  Int
  employeesId Int
}
